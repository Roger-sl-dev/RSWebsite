---
interface Props {
	title: string;
}

const { title } = Astro.props;
import Navbar from "../components/layout/Navbar.astro"
---

<!doctype html>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		
		<main class=" h-screen overflow-y-scroll w-full bg-black absolute bottom-0 left-0 right-0 top-0 bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-[size:50px_50px]">
			<header  class=" z-20 p-10    w-full">
				<Navbar/>
			</header>
			<slot />
		</main>
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Allerta+Stencil&family=Audiowide&family=Jersey+25&family=Protest+Guerrilla&family=Tomorrow:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');
