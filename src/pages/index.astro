	<section class=" w-full bg-gradient-to-r from-lime-300 to-teal-400">
		<Marquee/>
	</section>
	<section class=" w-full px-20 py-10 flex flex-col gap-8 place-items-center ">
		<h2 class=" text-3xl lg:text-5xl text-center text-white font-semibold capitalize flex flex-col gap-3 place-items-center">Uma coleção dos meus   <br class=" hidden lg:flex"/><TextBg>melhores projetos </TextBg></h2>
